{
  "compilerOptions": {
    "target": "es2022",
    "module": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "preserveConstEnums": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "declaration": false,
    // "noUnusedLocals": true,
    "removeComments": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
}